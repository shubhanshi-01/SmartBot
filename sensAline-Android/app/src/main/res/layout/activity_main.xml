<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/better_background">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:width="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_5rounded_bar"
        android:textColor="@color/white"
        android:paddingTop="10dp"/>


    <TextView
        android:text="109.00"
        android:layout_marginTop="30dp"
        android:id="@+id/accelerometerDataX"
        android:layout_below="@id/app_title"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:background="@drawable/ellipse_dial"
        android:layout_toLeftOf="@id/accelerometerDataY"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:paddingTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_toLeftOf="@id/accelerometerDataY"
        android:layout_marginRight="45dp"
        android:layout_marginTop="110dp"
        android:text="ACCX"
        android:textSize="15dp"
        android:textStyle="bold"
        android:elevation="3dp"
        android:textColor="#B6B6B6"/>
    <TextView
        android:text="21.67"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:id="@+id/accelerometerDataY"
        android:layout_toLeftOf="@id/accelerometerDataZ"
        android:layout_below="@id/app_title"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:background="@drawable/ellipse_dial"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_toLeftOf="@id/accelerometerDataZ"
        android:layout_marginRight="45dp"
        android:layout_marginTop="110dp"
        android:text="ACCY"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#B6B6B6"/>
    <TextView
        android:text="09.00"
        android:id="@+id/accelerometerDataZ"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/centerLine"
        android:layout_below="@id/app_title"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:background="@drawable/ellipse_dial"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_toLeftOf="@id/centerLine"
        android:layout_marginRight="50dp"
        android:layout_marginTop="110dp"
        android:text="ACCZ"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#B6B6B6"/>
    <TextView
        android:id="@+id/centerLine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/app_title"
        android:background="@drawable/ellipse_1ellipse__1_"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textAlignment="center"/>
    <TextView
        android:text="09.00"
        android:id="@+id/gyroscopeDataX"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/app_title"
        android:layout_toRightOf="@id/centerLine"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:background="@drawable/ellipse_dial"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_toRightOf="@id/accelerometerDataZ"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        android:text="GYRX"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#B6B6B6"/>
    <TextView
        android:text="09.00"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/gyroscopeDataY"
        android:layout_below="@id/app_title"
        android:layout_toRightOf="@id/gyroscopeDataX"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:background="@drawable/ellipse_dial"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_toRightOf="@id/gyroscopeDataX"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="110dp"
        android:text="GYRY"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#B6B6B6"/>
    <TextView
        android:text="09.00"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/gyroscopeDataZ"
        android:layout_below="@id/app_title"
        android:layout_toRightOf="@id/gyroscopeDataY"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:background="@drawable/ellipse_dial"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_toRightOf="@id/gyroscopeDataY"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="110dp"
        android:text="GYRZ"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#B6B6B6"/>

    <Button
        android:id="@+id/udp_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/accelerometerDataX"
        android:layout_toLeftOf="@id/editIP"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:text="SUDP"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/component_5button"/>
    <EditText
        android:id="@+id/editIP"
        android:background="@drawable/rectangle_5rounded_bar"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:inputType="text"
        android:hint="Enter IP Address"
        android:textColorHint="@color/white"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_toLeftOf="@id/editPORT"
        android:layout_below="@id/accelerometerDataX"
        android:textStyle="bold"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/editPORT"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/accelerometerDataY"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_5rounded_bar"
        android:padding="15dp"
        android:text="PORT 4440"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:id="@+id/line_detector_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@id/accelerometerDataY"
        android:layout_toRightOf="@id/editPORT"
        android:background="@drawable/component_5button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="LDET"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/opencv_puzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/line_detector_button"
        android:layout_below="@id/accelerometerDataY"
        android:text="PUZZ"
        android:background="@drawable/component_5button"
        android:padding="15dp"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/serial_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/opencv_puzzle"
        android:layout_below="@id/accelerometerDataY"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:text="SSRL"
        android:textStyle="bold"
        android:background="@drawable/component_5button"
        android:textColor="@color/white"/>
</RelativeLayout>
